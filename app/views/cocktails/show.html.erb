<div class="banner-small">

  <h1> <i class="fas fa-star"></i> <%= @cocktail.name %> <i class="fas fa-star"></i> </h1>

</div>

<div class="show-container">
<div class="show-img">
  <%= cl_image_tag @cocktail.photo.key, height: 300, crop: :fill %>
</div>
<div class="row justify-content-center">
  <ul>
  <% @cocktail.doses.each do |dose| %>
    <div class="show-description">
      <li><%= "#{dose.description} #{dose.ingredient.name} " %></li>

      <%= link_to dose_path(dose), method: :delete do%>
        <i class="fas fa-trash" style="color:#e7ecef"></i>
      <% end %>
    </div>
  <% end %>
  <%= link_to 'Add dose',  new_cocktail_dose_path(@cocktail), class: "show-btn"%>
<!--   </div> -->
</ul>
</div>
</div>


