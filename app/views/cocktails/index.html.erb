<h1>Cocktails index</h1>

  <% @cocktails.each do |cocktail| %>
    <div class="card" style="width: 18rem;">
      <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-body">
        <button type="button" class="btn btn-outline-info btn-block"><%= link_to cocktail.name, cocktail_path(cocktail) %></button>
      </div>
    </div>
 <%end %>


<%= link_to 'New cocktail', new_cocktail_path %>

